<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/myfon"
    android:fitsSystemWindows="true"
    tools:context=".mvp.view.DictionaryActivity">

    <ScrollView
        android:id="@+id/scroll1"
        android:layout_width="match_parent"
        android:layout_height="531dp"
        android:layout_above="@+id/buttonAddMyWord"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="10dp"
        android:scrollbarStyle="outsideInset">

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginEnd="10dp"
                android:contentDescription="@string/logo"
                android:fastScrollEnabled="true"
                app:layout_constraintBottom_toTopOf="@+id/divider2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.934"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/toolbar2"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/dog" />

            <View
                android:id="@+id/divider6"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="?android:attr/listDivider" />

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/buttonAddMyWord"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="272dp"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/tenor_sans"
        android:text="@string/add_word"
        android:textColor="@color/gold_dark"
        android:textSize="16sp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutAddMyWord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:background="@color/myfon4"
        android:visibility="invisible">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/buttonCloseAddMyWord"
            android:layout_width="59dp"
            android:layout_height="54dp"
            android:backgroundTint="@color/myfon"
            android:clickable="true"
            android:contentDescription="@string/close"
            android:focusable="true"
            android:scrollbarThumbHorizontal="@color/myfon"
            app:backgroundTint="@color/myfon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.98"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.01999998"
            app:rippleColor="@color/myfon"
            app:srcCompat="@android:drawable/ic_menu_close_clear_cancel" />

        <AutoCompleteTextView
            android:id="@+id/autoCompleteTextViewWord"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/black"
            android:fontFamily="@font/tenor_sans"
            android:hint="@string/word"
            android:singleLine="true"
            android:textColorLink="@color/purple_700"
            android:textCursorDrawable="@color/purple_700"
            app:layout_constraintBottom_toTopOf="@+id/autoCompleteTextViewTranslate"
            app:layout_constraintEnd_toEndOf="@+id/autoCompleteTextViewTranslate"
            app:layout_constraintStart_toStartOf="@+id/autoCompleteTextViewTranslate"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.8" />

        <AutoCompleteTextView
            android:id="@+id/autoCompleteTextViewTranslate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:backgroundTint="@color/black"
            android:fontFamily="@font/tenor_sans"
            android:hint="@string/translate"
            android:singleLine="true"
            android:textColorLink="@color/purple_700"
            android:textCursorDrawable="@color/purple_700"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.45" />

        <AutoCompleteTextView
            android:id="@+id/autoCompleteTextViewTranscription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/black"
            android:fontFamily="@font/tenor_sans"
            android:hint="@string/transcription"
            android:singleLine="true"
            android:textColorLink="@color/purple_700"
            android:textCursorDrawable="@color/purple_700"
            app:layout_constraintBottom_toTopOf="@+id/buttonAddMyWord1"
            app:layout_constraintEnd_toEndOf="@+id/autoCompleteTextViewWord"
            app:layout_constraintStart_toStartOf="@+id/autoCompleteTextViewWord"
            app:layout_constraintTop_toBottomOf="@+id/autoCompleteTextViewTranslate" />

        <Button
            android:id="@+id/buttonAddMyWord1"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/mypurpl2"
            android:fontFamily="@font/tenor_sans"
            android:text="@string/add"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/autoCompleteTextViewTranslate" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>