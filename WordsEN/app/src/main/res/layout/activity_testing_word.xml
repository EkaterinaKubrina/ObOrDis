<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/purple_fon"
    tools:context=".mvp.view.TestingWordActivity">

    <TextView
        android:id="@+id/testWord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="132dp"
        android:fontFamily="@font/tenor_sans"
        android:text="@string/test_word"
        android:textColor="@color/myfon"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/radioGroup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.231" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/answer1"
            style="@style/Widget.AppCompat.CompoundButton.RadioButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:buttonTint="@color/myfon"
            android:checked="false"
            android:paddingStart="10dp"
            android:text="@string/radiobutton2"
            android:textColor="@color/myfon"
            android:textColorHighlight="@color/mypurpl"
            android:textColorHint="@color/dark"
            android:textColorLink="@color/mypurpl"
            android:textSize="20sp"
            tools:ignore="RtlSymmetry" />

        <RadioButton
            android:id="@+id/answer2"
            style="@style/Widget.AppCompat.CompoundButton.RadioButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:buttonTint="@color/myfon"
            android:paddingStart="10dp"
            android:text="@string/radiobutton1"
            android:textColor="@color/myfon"
            android:textColorHighlight="@color/mypurpl"
            android:textColorHint="@color/dark"
            android:textColorLink="@color/mypurpl"
            android:textSize="20sp"
            tools:ignore="RtlSymmetry" />

        <RadioButton
            android:id="@+id/answer3"
            style="@style/Widget.AppCompat.CompoundButton.RadioButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:buttonTint="@color/myfon"
            android:paddingStart="10dp"
            android:text="@string/radiobutton3"
            android:textColor="@color/myfon"
            android:textColorHighlight="@color/mypurpl"
            android:textColorHint="@color/dark"
            android:textColorLink="@color/mypurpl"
            android:textSize="20sp"
            tools:ignore="RtlSymmetry" />

        <RadioButton
            android:id="@+id/answer4"
            style="@style/Widget.AppCompat.CompoundButton.RadioButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:buttonTint="@color/myfon"
            android:paddingStart="10dp"
            android:text="@string/radiobutton4"
            android:textColor="@color/myfon"
            android:textColorHighlight="@color/mypurpl"
            android:textColorHint="@color/dark1"
            android:textColorLink="@color/mypurpl"
            android:textSize="20sp"
            tools:ignore="RtlSymmetry" />
    </RadioGroup>

    <Button
        android:id="@+id/toAnswer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:backgroundTint="@color/mypurpl"
        android:fontFamily="@font/tenor_sans"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:text="@string/to_answer"
        android:textColor="@color/myfon"
        android:textColorHighlight="@color/darkpurpl"
        android:textColorHint="@color/mypurpl"
        android:textColorLink="@color/mypurpl"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup" />

    <TextView
        android:id="@+id/indexCurrentWord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/tenor_sans"
        android:textColor="@color/darkpurpl"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toAnswer" />

    <ImageButton
        android:id="@+id/closeTestButton"
        style="@android:style/Widget.Holo.Light.ImageButton"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="?android:attr/panelBackground"
        android:contentDescription="@string/close"
        app:layout_constraintBottom_toTopOf="@+id/testWord"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.847"
        app:layout_constraintStart_toEndOf="@+id/testWord"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.145"
        app:srcCompat="@drawable/closebutton1" />


</androidx.constraintlayout.widget.ConstraintLayout>